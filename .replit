modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["mongodb"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Install Dependencies"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Rewards API Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MongoDB Service"

[[workflows.workflow]]
name = "Install Dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow]]
name = "Rewards API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "MONGODB_URI=mongodb://localhost:27017/rewards-api PORT=8000 npx ts-node src/main.ts"
waitForPort = 8000

[[workflows.workflow]]
name = "MongoDB Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mongod --dbpath /tmp/mongodb --port 27017 --bind_ip 127.0.0.1"

[[ports]]
localPort = 8000
externalPort = 80
